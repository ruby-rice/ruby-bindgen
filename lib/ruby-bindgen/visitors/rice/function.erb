<%- if under -%>
<%= under.cruby_name %>.define_module_function<%= signature %>("<%= name %>", &<%= cursor.qualified_name %><%= args.empty? ? ")" : ",\n  #{args.join(", ")})" %>;
<%- else -%>
define_global_function<%= signature %>("<%= name %>", &<%= cursor.qualified_name %><%= args.empty? ? ")" : ",\n  #{args.join(", ")})" %>;
<%- end -%>